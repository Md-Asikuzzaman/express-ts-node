{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts" // Include TypeScript files in the src directory
  ],
  "exclude": [
    "node_modules",
    "dist" // Exclude the output directory from being compiled
  ]
}
